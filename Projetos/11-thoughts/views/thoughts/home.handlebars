{{#if search}} 
    <h1>Você está buscando por: {{search}}</h1>
    {{#if thoughtsQty}} 
        <p>Foram encontrados {{thoughtsQty}} thoughts</p>
    {{else}} 
        <p>Não foram encontrados resultados para o termo: "{{search}}"</p>
    {{/if}}
{{else}}
    <h1>Todos os Pensamentos</h1>
{{/if}}

<div class="home-header">
    <div class="search-container">
        <form action="/" method="GET">
        <input type="text" name="search" placeholder="Está buscando por algo?">
        <input type="submit" value="Buscar">
    </form>
    </div>
    <div class="order-container">
        <span>Ordenar por: </span>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="new">
            <button type="submit" {{#if oldFirst}}{{else}}class='active'{{/if}}>
                <i class="bi bi-arrow-up" title="Novos primeiro">
                </i>
            </button>
        </form>
        <form action="/" method="GET">
            <input type="hidden" name="search" value="{{this.search}}">
            <input type="hidden" name="order" value="old">
            <button type="submit" {{#if oldFirst}}class='active'{{/if}}>
                <i class="bi bi-arrow-down" title="Antigos primeiro">
                </i>
                </button>
        </form>
        
    </div>
    <div>
        <a href="/">Limpar</a>
    </div>
    
</div>
<div class="thoughts-container">
    {{#each thoughts}}
        <figure>
            <div class="quote">
            "{{this.title}}"
            </div>
            <figcaption>por <span>{{this.User.name}}</span></figcaption>
        </figure>
    {{/each}}
</div>