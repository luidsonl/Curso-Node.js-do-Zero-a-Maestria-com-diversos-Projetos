<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" href="/img/favicon.ico" type="image/x-icon">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <title>Thoughts</title>
</head>
<body>
    <nav id="navbar">
        <a href="/" id="logo">
            <img src="/img/toughts_logo.png" alt="">
        </a>
        
        <ul>
            <li>
                <a href="/" id="home-link">Pensamentos</a>
            </li>
            <!--Se não autenticado-->
            {{#if session.userId}}
                <li>
                    <a href="/dashboard" id="dashboard">Dashboard</a>
                </li>
                <li>
                    <a href="/logout">Sair</a>
                </li>
            {{else}}
            <li>
                <a href="/login" id="login-link">Entrar</a>
            </li>
            <li>
                <a href="/register" id="register-link">Registrar</a>
            </li>
            {{/if}}
        </ul>
    </nav>
    <div class="content">
        {{#if messages.message}}
        <div class="message">
            {{#each messages.message}}
            <div>
                {{this}}
            </div>
                
            {{/each}}
        </div>
        {{/if}}
        {{{body}}}
    </div>

    <footer>
        <p>
            Thoughts &copy; 2023
        </p>
    </footer>
    
</body>
</html>
<script>// fará a lógica de detectar qual aba está ativa
    const navbarLinks = {
        '/':'home-link',
        '/login': 'login-link',
        '/register': 'register-link',
        '/dashboard': 'dashboard'
    }
    const activeLink = document.getElementById(navbarLinks[window.location.pathname])
    activeLink.className += "active"

</script>