<div class="auth-container">
    <h2>Entrar</h2>
    <form action="/login"  method="POST">
        <div class="form-control">
            <label for="email">E-mail</label>
            <input type="text" id="email" name="email" placeholder="Informe seu email" required value="{{email}}">
        </div>
        <div class="form-control">
            <label for="password">Senha</label>
            <input type="password" id="password" name="password" placeholder="Informe sua senha" required value="{{password}}">
        </div>
        <input type="submit" value="Entrar" class="submit-button">
    </form>
    <p><a href="/register">NÃ£o tenho uma conta</a></p>
</div>