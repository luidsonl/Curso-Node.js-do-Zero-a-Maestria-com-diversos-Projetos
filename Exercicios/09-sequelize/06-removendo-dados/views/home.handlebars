<h1>Usu√°rios cadastrados</h1>

<div class="container">
    {{#each users}}
    <div class="item">
        <div class="row">
            <div class="column">
                <h4> {{this.name}} </h4>
                <p> {{this.occupation}} </p>
            </div>
            <div class="column align-right">
                <div class="actions">
                    <p>
                        <a href="/users/{{this.id}}"> Visualizar </a>
                    </p>
                    
                    <form action="/users/delete/{{this.id}}" method="POST">
                        <input type="submit" value="Excluir" class="delete-btn">
                    </form>
                </div>
            </div>
        </div>
        
    </div>
    {{/each}}
</div>
