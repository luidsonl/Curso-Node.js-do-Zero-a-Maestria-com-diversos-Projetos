<div class="box">
    <h1>Editar usuário: {{user.name}} </h1>

    <form action="/users/update" class="box" method="POST">
        <input type="hidden" name="id" value="{{user.id}}">
        <div class="form-control">
            <label for="name"> Nome:</label>
            <input type="text" name="name" placeholder="Alterar nome" value="{{user.name}}" id="name" required>
        </div>
        <div class="form-control">
            <label for="occupation">Ocupação</label>
            <input type="text" name="occupation" placeholder="Alterar ocupação" value="{{user.occupation}} " id="occupation" required>
        </div>
        <div class="form-control form-checkbox">
            {{#if user.newsletter}}
            <input type="checkbox" name="newsletter" checked>
            {{else}}
            <input type="checkbox" name="newsletter">
            {{/if}}
            <label for="newsletter">Deseja receber promoções</label>
        </div>
        <div class="form-control">
            <input type="submit" value="Editar">
        </div>
    </form>
    <hr>
</div>


<div class="box">
    <h2>Endereço:</h2>
    <form action="/address/create" method="POST">
        <input type="hidden" name="userId" value="{{user.id}}">
        <div class="form-control">
            <label for="neighborhood">Bairro:</label>
            <input type="text" name="neighborhood" placeholder="Informe a rua" id="neighborhood" required>
        </div>
        <div class="form-control">
            <label for="street">Rua:</label>
            <input type="text" name="street" placeholder="Informe a rua" id="street" required>
        </div>

        <div class="row">
            <div class="column">
                <div class="form-control">
                    <label for="number">Número:</label>
                    <input type="text" name="number" placeholder="Informe o número da residência" id="number" required>
                </div>
            </div>
            <div class="column">
                <div class="form-control">
                    <label for="city">Cidade:</label>
                    <input type="text" name="city" placeholder="Informe a cidade" id="city" required>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="column">
                <div class="form-control">
                    <label for="state">Estado:</label>
                    <input type="text" name="state" placeholder="Informe o estado" id="state" required>
                </div>
            </div>
            <div class="column">
                <div class="form-control">
                    <label for="country">País:</label>
                    <input type="text" name="country" placeholder="Informe o País" id="country" value="Brasil" required>
                </div>
            </div>
        </div>
        
        
        <div class="form-control">
            <input type="submit" name="submit" value="Incluir endereço">
        </div>
        
    </form>
    
    <div class="address-list">
        <h2>Lista de endereços</h2>
        {{#each user.addresses}}
            <p># {{this.id}} - {{this.street}} - {{this.number}} - {{this.city}}</p>
        {{/each}}
    </div>
    
</div>