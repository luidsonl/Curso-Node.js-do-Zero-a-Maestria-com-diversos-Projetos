<h1>Editar usuário: {{user.name}} </h1>

<form action="/users/update" class="box" method="POST">
    <input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name"> Nome:</label>
        <input type="text" name="name" placeholder="Alterar nome" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="ocupation">Ocupação</label>
        <input type="text" name="occupation" placeholder="Alterar ocupação" value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter">
        {{/if}}
        <label for="newsletter">Deseja receber promoções</label>
    </div>
    <div class="form-control">
        <input type="submit" value="Editar">
    </div>
</form>