<div class="product">
        <h2>{{product.name}}</h2>
        <p>{{product.description}}</p>
        <small>{{product.price}}</small>
        <img src="{{product.featured_image}}" alt="{{this.name}}">
        <a href="/products/edit/{{product.sku}}">editar</a>
        <form method="post" action="/products/remove/{{product._id}}">
                <button>Remover</button>
        </form>
        {{#each product.gallery}}
                <img src="{{this}}" alt="{{this}}">
        {{/each}}
</div>